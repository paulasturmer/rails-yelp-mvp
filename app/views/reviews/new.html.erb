<div class="container">
  <div class="row justify-content-center">
    <col-4 class="col-md-6">
      <h1>New Review at <%= @restaurant.name %></h1>
      <%= simple_form_for [ @restaurant, @review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.button :submit %>
      <% end %>
    </col-4>
  </div>
  <button type="button" class="btn btn-light"><%= link_to 'Back', restaurant_path(@restaurant.id) %></button>
</div>
